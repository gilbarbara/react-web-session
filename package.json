{
  "name": "react-web-session",
  "version": "0.1.2",
  "description": "Keep session data between windows",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/react-web-session.git"
  },
  "keywords": [
    "react",
    "react-component",
    "component",
    "session"
  ],
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gilbarbara/react-web-session/issues"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "src"
  ],
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0",
    "prop-types": "^15.0.0",
    "history": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.1.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "jest-localstorage-mock": "^2.1.0",
    "react": "^16.1.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1"
  },
  "scripts": {
    "build": "npm run clean && npm run build:commonjs && npm run build:es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib",
    "build:es": "cross-env NODE_ENV=production babel src -d es",
    "watch": "npm run build:commonjs -- -w",
    "clean": "rimraf es && rimraf lib",
    "lint": "eslint --ext .js --ext .jsx src test",
    "test": "jest --config config/jest.config.js --coverage",
    "test:watch": "jest --config config/jest.config.js --watch",
    "precommit": "node config/tools commits && npm run lint && npm test",
    "postmerge": "node config/tools update && npm update",
    "prepublishOnly": "npm run build"
  }
}
